<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colman.osp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.colman.osp.SwimmingPoolActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.colman.osp.SwimmingPoolSearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
        <activity
            android:name="com.colman.osp.MainActivity"
            android:label="@string/title_activity_recreations" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.colman.osp.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>